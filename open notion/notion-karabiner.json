{
    "description": "Launch Notion with option+O",
    "manipulators": [
        {
            "from": {
                "key_code": "o",
                "modifiers": {
                    "mandatory": "option",
                    "optional": [
                        "any"
                    ]
                }
            },
            "to": [
                {
                    "shell_command": "open -a 'Notion'"
                }
            ],
            "type": "basic"
        }
    ]
}